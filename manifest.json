{
  "manifest_version": 2,
  "name": "Sequential Tab Loader",
  "version": "2025.5.30",
  "description": "Loads tabs sequentially or in batches to reduce lag.",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "64": "icon.svg",
      "96": "icon.svg"
    },
    "default_title": "Sequential Tab Loader"
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "64": "icon.svg",
    "96": "icon.svg"
  }
}